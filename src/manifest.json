{
  "name": "SAML SSO for Chrome Apps",
  "description": "Helper extension for admins to configure SAML SSO for Chrome apps.",
  "version": "1.2",
  "manifest_version": 3,
  "storage": {
    "managed_schema": "schema.json"
  },
  "permissions": [
    "cookies",
    "storage"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  }
}
